<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.Tantan">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="회원가입"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white">

        </TextView>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_menusetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자">
            </RadioButton>
        </RadioGroup>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연령별 적정 몸무게 및 건강 상태 확인을 위해 수집합닌다."
            android:textSize="11sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_birthyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/add_year">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"></TextView>
            <Spinner
                android:id="@+id/spinner_birthmonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/add_month">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"></TextView>
            <Spinner
                android:id="@+id/spinner_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/add_day">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"></TextView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_join_height1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/height1">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="."></TextView>
            <Spinner
                android:id="@+id/spinner_join_height2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/height2">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"></TextView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몸무게"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_join_weight1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/weight">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="."></TextView>
            <Spinner
                android:id="@+id/spinner_join_weight2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/weight2">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"></TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:weightSum="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="취소"></Button>
            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="완료"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>