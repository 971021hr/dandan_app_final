                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/calendarView"
                    android:layout_weight="1"
                    app:mcv_selectionColor="@color/purple_main"
                    app:mcv_showOtherDates="all"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/calendar_detail"
                android:visibility="invisible">

            <!--선택한 날짜 띄우기-->
                <TextView
                    android:id="@+id/txt_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021년 02월 19일"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="식단, 물"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/btn_left_round"
                        android:textColor="@color/white"
                        />

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="운동, 신체"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/btn_right_round"/>

                </LinearLayout>

                <!--달력 > 디테일 > 버튼 영역-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--식단, 물 버튼 누르면 표시되는 영역-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/layout_meal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="식단, 물 영역"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <!--운동, 신체 버튼 누르면 표시되는 영역-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/layout_body"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="운동, 신체 영역"
                            android:textSize="20sp"/>

                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>
        </FrameLayout>



</LinearLayout>