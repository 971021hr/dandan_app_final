<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/bodyImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_baseline_directions_run_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bodyWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="몸무게 : 00.0kg"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/bodyMuscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="골격근 : 00.0kg"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bodyFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체지방 : 00.0kg"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>